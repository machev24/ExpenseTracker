@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
    </script>
    <canvas id="myChart1" style="width:100%;max-width:600px"></canvas>

    <script>
    var xValues1 = ["Travel", "Education", "Health Care", "Grocery", "Eating Outside","Entertainments","Garments"];
    var yValues1 = [55, 49, 44, 24, 20,15,10];
    var barColors = [
      "#088F8F",
      "#50C878",
      "#FDDA0D",
      "#D27D2D",
      "#6495ED",
      "#D22B2B",
      "#DE3163"
    ];
    
    new Chart("myChart1", {
      type: "pie",
      data: {
        labels: xValues1,
        datasets: [{
          backgroundColor: barColors,
          data: yValues1
        }]
      },
      options: {
        title: {
          display: true,
          text: "Expense By Category"
        }
      }
    });
    </script>
</div>